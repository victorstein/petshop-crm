{
  "hosting": {
    "source": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "frameworksBackend": {
      "region": "us-east1"
    }
  },
  "firestore": {
    "rules": "./integrations/firebase/firestore.rules",
    "indexes": "./integrations/firebase/firestore.indexes.json"
  },
  "functions": [
    {
      "source": ".",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [        
        "npm --prefix \"$RESOURCE_DIR\" run functions:build"
      ]
    }
  ]
}
